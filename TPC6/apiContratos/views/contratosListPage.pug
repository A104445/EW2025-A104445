extends layout

block content
    .w3-card-4
        header.w3-container.w3-yellow 
            h1 
                span Contratos 
                a.w3-btn.w3-round.w3-grey(href='/contratos/registo') +

        .w3-container  
            table.w3-table-all  
                tr 
                    th idcontrato
                    //- th nAnuncio
                    //- th tipoprocedimento 
                    th objectoContrato
                    //- th dataPublicacao
                    th dataCelebracaoContrato
                    th precoContratual
                    //- th prazoExecucao
                    th NIPC_entidade_comunicante
                    th entidade_comunicante
                    //- th fundamentacao
                each contrato in conts 
                    tr 
                        td
                            a(href="/contratos/" + contrato.idcontrato)= contrato.idcontrato
                        //- td= contrato.nAnuncio
                        //- td= contrato.tipoprocedimento 
                        td= contrato.objectoContrato
                        //- td= contrato.dataPublicacao
                        td= contrato.dataCelebracaoContrato
                        td= contrato.precoContratual 
                        //- td= contrato.prazoExecucao
                        td
                            a(href="/contratos/entidades/" + contrato.NIPC_entidade_comunicante)= contrato.NIPC_entidade_comunicante
                        td= contrato.entidade_comunicante
                        //- td= contrato.fundamentacao
                        td 
                                span [
                                a(href="/contratos/edit/" + contrato.idcontrato) Edit
                                span ]
                                span [
                                a(href="/contratos/delete/" + contrato._id) Delete
                                span ]