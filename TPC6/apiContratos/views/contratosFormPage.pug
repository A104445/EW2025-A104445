extends layout

block content
  .w3-card-4
    header.w3-container.w3-red
      h2 Contratos Form

    form.w3-container(method="POST" action="/contratos/registo")
      fieldset
        legend Metadata
        label Id
        input.w3-input.w3-round(type="text" name="_id" required)
        label IdContrato
        input.w3-input.w3-round(type="text" name="idcontrato" required)
        label nAnuncio
        input.w3-input.w3-round(type="text" name="nAnuncio")
        label TipoProcedimento
        input.w3-input.w3-round(type="text" name="tipoprocedimento")
        label ObjectoContrato
        input.w3-input.w3-round(type="text" name="objectoContrato")
        label DataPublicacao
        input.w3-input.w3-round(type="text" name="dataPublicacao")
        label DataCelebracaoContrato
        input.w3-input.w3-round(type="text" name="dataCelebracaoContrato")
        label PrecoContratual
        input.w3-input.w3-round(type="text" name="precoContratual")
        label PrazoExecucao
        input.w3-input.w3-round(type="text" name="prazoExecucao")
        label NIPC_entidade_comunicante
        input.w3-input.w3-round(type="text" name="NIPC_entidade_comunicante")
        label EntidadeComunicante
        input.w3-input.w3-round(type="text" name="entidade_comunicante")
        label Fundamentacao
        input.w3-input.w3-round(type="text" name="fundamentacao")
      br
      button.w3-btn.w3-red.w3-mb-2(type="submit") Register
      footer.w3-container.w3-red 
        address 
            span Gerado por EngWeb2025  
            a(href= '/contratos') Voltar