extends layout

block content
  .w3-card-4
    header.w3-container.w3-indigo
      h2 Contratos Form

    form.w3-container(method="POST" action=`/contratos/edit/${conts._id}`)
      fieldset
        legend Metadata
        label Id
        input.w3-input.w3-round(type="text" name="idcontrato" readonly value=conts.idcontrato)
        label nAnuncio
        input.w3-input.w3-round(type="text" name="nAnuncio" value=conts.nAnuncio)
        label TipoProcedimento
        input.w3-input.w3-round(type="text" name="tipoprocedimento" value=conts.tipoprocedimento)
        label ObjectoContrato
        input.w3-input.w3-round(type="text" name="objectoContrato" value=conts.objectoContrato)
        label DataPublicacao
        input.w3-input.w3-round(type="text" name="dataPublicacao" value=conts.dataPublicacao)
        label DataCelebracaoContrato
        input.w3-input.w3-round(type="text" name="dataCelebracaoContrato" value=conts.dataCelebracaoContrato)
        label PrecoContratual
        input.w3-input.w3-round(type="text" name="precoContratual" value=conts.precoContratual)
        label PrazoExecucao
        input.w3-input.w3-round(type="text" name="prazoExecucao" value=conts.prazoExecucao)
        label NIPC_entidade_comunicante
        input.w3-input.w3-round(type="text" name="NIPC_entidade_comunicante" value=conts.NIPC_entidade_comunicante)
        label EntidadeComunicante
        input.w3-input.w3-round(type="text" name="entidade_comunicante" value=conts.entidade_comunicante)
        label Fundamentacao
        input.w3-input.w3-round(type="text" name="fundamentacao" value=conts.fundamentacao)
      br
      button.w3-btn.w3-indigo.w3-mb-2(type="submit") Edit
      footer.w3-container.w3-indigo 
        address 
          span Gerado por EngWeb2025 
          a(href= '/contratos') Voltar