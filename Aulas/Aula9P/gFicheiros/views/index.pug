extends layout

block content
  .modal(id="display")
  .w3-card-4 
    header.w3-indigo 
      h1 File Manager 
    form.w3-container(action='/files' method='POST' enctype='multipart/form-data')
      label.w3-text-teal
        b Select File 
      input.w3-input.w3-border.w3-light-grey(type='file' name='myFile')
      input.w3-btn.w3-blue-grey(type='submit' value='Send')

  
  .w3-card-4 
    header.w3-indigo 
      h2 File List
    .w3-container
      table.w3-table-all
        thead
          tr
            th Date
            th File Name
            th  Size
            th Type
        tbody
          each file in files
            tr(onClick='showImage("' + file.name + '","' + file.type + '")')
              td= file.date
              td= file.name
              td= file.size
              td= file.type
  
  footer.w3-container.w3-indigo 
    adress Generated by upload-single::EngWeb2025 em #{date} 
