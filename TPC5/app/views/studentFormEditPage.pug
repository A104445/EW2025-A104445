extends layout

block content
  .w3-card-4
    header.w3-container.w3-orange
      h2 Student Form

    form.w3-container(method="POST" action=`/alunos/edit/${student._id}`)
      fieldset
        legend Metadata
        label Id
        input.w3-input.w3-round(type="text" name="_id" readonly value=student._id)
        label Name
        input.w3-input.w3-round(type="text" name="nome" value=student.nome)
        label Git
        input.w3-input.w3-round(type="text" name="gitlink" value=student.gitlink)

      fieldset
        legend TPC
        each i in [1, 2, 3, 4, 5, 6, 7, 8]
          - var tpc = "tpc" + i
          if tpc in student
            input.w3-check(type="checkbox" name=`tpc${i}` value="1" checked)
            label TPC#{i}
          else
            input.w3-check(type="checkbox" name=`tpc${i}` value="1")
            label TPC#{i}

      br
      button.w3-btn.w3-orange.w3-mb-2(type="submit") Edit
